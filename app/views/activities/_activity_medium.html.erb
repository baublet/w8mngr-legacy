<div class="activity medium">
  <div class="activity-general-info">
    <% if activity.targets_any_group? %>
    <div class="muscle-groups show">
        <% Activity::MUSCLE_GROUP_VALUES.each do |name| %>
          <%= check_box_tag "activity[muscle_groups][#{name}]", "1", activity.targets_group?(name), {class: "muscles-helper"} %>
        <% end %>
        <%= render "activities/muscle_groups" %>
    </div>
    <% end %>
    <h3><%= link_to activity.name, activity %></h3>
    <div class="activity">
      <div class="type"><%= activity.type_name %></div>
      <% if defined? activity_description %>
        <%= raw(activity_description) %>
      <% end %>
      <%= link_to activity_log_day_path(activity, current_day), class: "log-activity-btn btn" do %>
        <i class="fa fa-bolt" aria-hidden="true"></i>
        Log Activity <span class="screen-reader-text"><%= activity.name %></span>
      <% end %>
    </div>
  </div>
  <% entries = activity.entries(current_user.id, 1, 0, current_day.to_i + 1) %>
  <% if entries.count > 0 %>
    <div class="activity-entries<%= entries[0].day.to_i == current_day.to_i ? " today" : " not-today" %>">
      <h4><%= entries[0].day.to_i == current_day.to_i ? "Today's Entries, " + nice_day(entries[0].day) : "Last Entry: " + pluralize(current_day.to_i - entries[0].day, "day") + " ago" %></h4>
      <% entries.each do |entry| %>
        <%= render entry %>
      <% end %>
    </div>
  <% end %>
</div>