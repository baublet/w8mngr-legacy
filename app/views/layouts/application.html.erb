<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>">

<header>

    <brand>
        <h1 class="site-title"><%= link_to "w8mngr", root_path %></h1>
        <h2 class="site-subtitle">The Lifestyle Tracker</h2>
    </brand>

    <nav>
        <input type="checkbox" class="nav-toggle" id="nav-toggle" selected>
        <label for="nav-toggle" class="nav-toggle-btn"><span class="screen-reader-text">Options</span></label>
        <div class="navigation-options">
            <h2 class="navigation-title">Navigation</h2>
            <ul class="navigation-list">
                <li><%= link_to "Home", root_path %></li>
                <li><a href="">How to Manage</a></li>
                <li><a href="">Meals Database</a></li>
            <% if logged_in? %>
                <li class="welcome-back sep">Welcome back, <%= current_user.email %>!</li>
                <li><%= link_to "Food Log", food_entries_path %></li>
                <li><%= link_to "Profile", current_user %></li>
                <li class="sep"></li>
            	<li><%= link_to "Logout", logout_path, method: "delete" %></li>
            <% else %>
                <li><%= link_to "Sign Up", signup_path %></li>
            	<li class="sep"><%= render 'sessions/login_form' %></li>
                <li></li>
            <% end %>
            </ul>
        </div>
    </nav>

</header>

<% flash.each do |message_type, message| %>
    <%= content_tag(:div, message, class: "alert #{message_type}") %>
<% end %>

<section class="content">

<%= yield %>

</section>

</body>
</html>
