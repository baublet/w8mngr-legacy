<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>">

<header>

    <h1 class="site-title"><%= link_to "w8mngr", root_path %></h1>
    <h2 class="site-subtitle">The Lifestyle Tracker</h2>

    <nav>
        <% if logged_in? %>
            <%= link_to "Profile", current_user %>
        	<%= link_to "Logout", logout_path, method: "delete" %>
            <%= link_to "Food Log", food_entries_path %>
        <% else %>
            <%= link_to "Sign Up", signup_path %>
        	<%= link_to "Login", login_path %>
        <% end %>
    </nav>

</header>

<% flash.each do |message_type, message| %>
    <%= content_tag(:div, message, class: "alert #{message_type}") %>
<% end %>

<% if logged_in? %>
    Prev: <%= link_to nice_day(previous_day), controller: 'food_entries', day: previous_day %><br>
    Day: <%= nice_day(current_day) %><br>
    Next: <%= link_to nice_day(next_day), controller: 'food_entries', day: next_day %>
<% end %>

<%= yield %>

</body>
</html>
