<% provide(:title, "Edit Profile") %>
<h1>Edit Profile</h1>

<p>Tell us a little bit about yourself. It helps our algorithm better understand you when you get around to setting some goals.</p>

<%= form_tag user_path(current_user.id) do |form| %>

	<% if current_user.errors.any? %>
		<%= render partial: "shared/error_messages", locals: {errors: current_user.errors} %>
	<% end %>

	<%= label_tag "timezone", "Timezone" %>
	<%= select_tag "timezone",
			options_for_select(
				time_zone_options_for_select(current_user.preferences[:timezone], nil, ActiveSupport::TimeZone)
			), prompt: "Detect Automatically"
	%>

	<%= label_tag "height_display", "Height" %>
	<%= text_field_tag "height_display", current_user.preferences[:height_display], placeholder: "e.g. 5'8\", 175 cm, 5 feet 8 inches, 72 inches, etc." %>

	<div class="radio-list">
		<span class="header">Sex</span>

		<%= radio_button_tag 'sex', 'f', current_user.preferences[:sex] == "f" ? true : false, :id => "sex.f" %>
		<%= label_tag "sex.f", "Female" %>

		<%= radio_button_tag 'sex', 'm', current_user.preferences[:sex] == "m" ? true : false, :id => "sex.m" %>
		<%= label_tag "sex.m", "Male" %>

		<%= radio_button_tag 'sex', 'na', current_user.preferences[:sex] == "na" ? true : false, :id => "sex.na" %>
		<%= label_tag "sex.na", "Other / Prefer Not to Disclose" %>
	</div>

	<%= button_tag(type: 'submit', class: 'btn') do %>
		Save
	<% end %>
<% end %>
