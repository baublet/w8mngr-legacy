<% if !previous_page.nil? || !next_page.nil? %>
<div class="pagination btn-bar">
	<div class="left">
	<% if !previous_page.nil? %>
		<a href="<%= base_url %>&p=<%= previous_page %>" class="btn btn-prev"><i class="fa fa-chevron-circle-left"></i> Back</a>
	<% end %>
	</div>

	<div class="right">
	<% if !next_page.nil? %>
		<a href="<%= base_url %>&p=<%= next_page %>" class="btn btn-next">Next <i class="fa fa-chevron-circle-right"></i></a>
	<% end %>
	</div>
</div>
<% end %>
