<% if logged_in? %>
<div class="app-menu-box">
    <ul class="app-menu-base">
        <li>
            <input type="radio" class="app-menu-top-option" id="app-menu-dashboard" name="nav-radio" checked="checked">
            <label for="app-menu-dashboard">
                <i class="fa fa-home"></i>
                <span class="screen-reader-text">Dashboard</span>
            </label>
            <ul class="app-menu-sub">
                <li>
                    <%= link_to user_path(current_user) do %>
                        <i class="fa fa-tachometer"></i>
                        <span>Dashboard</span>
                    <% end %>
                </li>
                <li>
                    <%= link_to user_path(current_user) do %>
                        <i class="fa fa-line-chart"></i>
                        <span>Progress</span>
                    <% end %>
                </li>
                <li>
                    <%= link_to user_path(current_user) do %>
                        <i class="fa fa-user"></i>
                        <span>Profile</span>
                    <% end %>
                </li>
            </ul>
        </li>
        <li>
            <input type="radio" class="app-menu-top-option" id="app-menu-food" name="nav-radio">
