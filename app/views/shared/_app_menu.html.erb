                        <span>Search</span>
                    <% end %>
                </li>
                <li>
                    <%= link_to food_search_path do %>
                        <i class="fa fa-shopping-basket"></i>
                        <span>Recipes</span>
                    <% end %>
                </li>
            </ul>
        </li>
        <li>
            <input type="radio" class="app-menu-top-option" id="app-menu-health" name="nav-radio">
            <label for="app-menu-health">
                <i class="fa fa-heartbeat"></i>
                <span class="screen-reader-text">Health & Training</span>
