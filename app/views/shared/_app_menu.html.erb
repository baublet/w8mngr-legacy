                <i class="fa fa-cutlery"></i>
                <span class="screen-reader-text">Food</span>
            </label>
            <ul class="app-menu-sub">
                <li>
                    <%= link_to foodlog_path do %>
                        <i class="fa fa-list-alt"></i>
